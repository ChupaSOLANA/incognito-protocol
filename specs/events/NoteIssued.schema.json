{
  "$id": "NoteIssued.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "NoteIssued",
  "type": "object",
  "required": [
    "event_id",
    "kind",
    "ts",
    "commitment",
    "amount",
    "recipient_tag_hex",
    "blind_sig_hex",
    "epoch"
  ],
  "properties": {
    "event_id": { "type": "string", "minLength": 1 },
    "kind": { "const": "NoteIssued" },
    "ts": { "type": "string", "format": "date-time" },
    "commitment": { "type": "string", "pattern": "^[0-9a-fA-F]+$" },
    "amount": { "type": "integer", "minimum": 0, "description": "lamports" },
    "recipient_tag_hex": { "type": "string", "pattern": "^[0-9a-fA-F]+$" },
    "blind_sig_hex": { "type": "string", "pattern": "^[0-9a-fA-F]+$" },
    "epoch": { "type": "integer", "minimum": 0 }
  },
  "additionalProperties": false
}
